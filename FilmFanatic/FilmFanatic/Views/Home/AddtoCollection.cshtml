@{ ViewData["Title"] = "Add to Collection";
}

@model FilmFanatic.Models.CollectionResponse

<!--form to enter new film into collection-->
<div>
    <form method="post">
        <label asp-for="Title" class="form-group">Title:</label>
        <input asp-for="Title"><br>
        <span asp-validation-for="Title" class="text-danger"></span><br />

        <label asp-for="CategoryId" class="form-group">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Film Category</option>
            @*for each "category object in the table Category (see Context file), do this"*@
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select><br />
        <span asp-validation-for="CategoryId" class="text-danger"></span><br />

        <label asp-for="Year" class="form-group">Year Released:</label>
        <input type="number" asp-for="Year"><br />
        <span asp-validation-for="Year" class="text-danger"></span><br />


        <label asp-for="Director" class="form-group">Director's Name:</label>
        <input asp-for="Director"><br />
        <span asp-validation-for="Director" class="text-danger"></span><br />


        <label asp-for="Rating" class="form-group">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />
        <span asp-validation-for="Rating" class="text-danger"></span><br />

        <label asp-for="Edited" class="form-group">This movie was edited</label>
        <select asp-for="Edited">
            @*<option value="">--</option>*@
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select><br>

        <label asp-for="LentTo" class="form-group">Lent to:</label>
        <input asp-for="LentTo"><br>


        <label asp-for="Notes" class="form-group">Notes:</label>
        <input asp-for="Notes" maxlength="25"><br>


        <button id="add" type="submit" class="btn btn-primary">Add to the Collection</button>

    </form>
    <span asp-validation-summary="All" class="text-danger"></span><br />

</div>
